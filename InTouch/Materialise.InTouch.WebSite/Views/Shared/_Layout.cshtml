@using Materialise.InTouch.WebSite.Configuration
@using Microsoft.Extensions.Options

@inject IOptions<GoogleAnalyticsConfiguration> OptionsGoogleAnalyticsConfiguration

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    @RenderSection("styles", false)

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=@OptionsGoogleAnalyticsConfiguration.Value.Identifier"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', "@OptionsGoogleAnalyticsConfiguration.Value.Identifier");
    </script>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>InTouch.Materialise</title>
    <base href="~/"/>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700">
    <link rel="stylesheet" href="~/dist/vendor.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/style.blue.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/animsition.min.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/fontastic.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/sharepoint/office365icons.css" asp-append-version="true"/>
</head>
<body style="background-color: #eee">
@RenderBody()

@RenderSection("scripts", required: false)
@section scripts
{
    <link href="~/Content/yourcssname.css" rel="stylesheet" />
}
</body>

</html>
